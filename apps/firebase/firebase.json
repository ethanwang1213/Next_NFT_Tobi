{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/metadata/**",
        "function": "tobiraneko",
        "region": "asia-northeast1"
      },
      {
        "source": "/housebadge/metadata/**",
        "function": "housebadge",
        "region": "asia-northeast1"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5002
    },
    "pubsub": {
      "port": 8086
    },
    "firestore": {
      "port": 8081
    },
    "storage": {
      "port": 7777
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
