rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /users/{userId} {
      allow read: if true;
      match /{fileName} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId && request.resource.size < 10 * 400 * 400 && fileName == 'icon.png';
      }
      match /item/{itemId}/{fileName} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId && request.resource.size < 10 * 1024 * 1024 && (fileName == 'image.png' || fileName == 'model.glb');
      }
    }
  }
}
